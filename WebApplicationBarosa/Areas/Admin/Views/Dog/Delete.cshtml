@model Dog

<h1>Delete</h1>

<form method="post">
    <input asp-for="Id" type="hidden" />

    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete Dog</h2>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Breed" class="p-0"></label>
        <input asp-for="Breed" disabled class="form-control" />
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0"></label>
        <textarea asp-for="Description" disabled class="form-control" rows="4"></textarea>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="SKU" class="p-0"></label>
        <input asp-for="SKU" disabled class="form-control" />
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="ListPrice" class="p-0"></label>
        <input asp-for="ListPrice" disabled type="number" step="0.01" class="form-control" />
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Gender" class="p-0"></label>
        <select asp-for="Gender" disabled class="form-control">
            <option value="">Select Gender</option>
            @foreach (var gender in Enum.GetValues(typeof(WebApplicationBarosa.Models.Dog.Sex)).Cast<WebApplicationBarosa.Models.Dog.Sex>())
            {
                <option value="@gender" selected="@(gender == Model.Gender)">
                    @gender
                </option>
            }
        </select>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="CategoryId" class="p-0"></label>
        <input asp-for="CategoryId" type="text" disabled class="form-control" value="@Model.Category.CategoryId" />
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Dog" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to list
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
