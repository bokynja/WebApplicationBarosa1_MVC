@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Create Category</h2>
    </div>
    @*     <div asp-validation-summary="All"></div>
    *@

    <div class="mb-3 row p-1">
        <label asp-for="TypeOfBreed" class="p-0"></label>
        <input asp-for="TypeOfBreed" class="form-control" />
        <span asp-validation-for="TypeOfBreed" class="text-danger"></span>

    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Create</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to list
            </a>
        </div>
    </div>


</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}