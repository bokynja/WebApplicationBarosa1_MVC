@model Dog

<h1>Edit</h1>

<form method="post">
    <input asp-for="Id" type="hidden" />

    <div class="border p-3 mt-4">
        <h2 class="text-primary">Edit Dog</h2>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Breed" class="p-0"></label>
        <input asp-for="Breed" class="form-control" />
        <span asp-validation-for="Breed" class="text-danger"></span>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="SKU" class="p-0"></label>
        <input asp-for="SKU" class="form-control" />
        <span asp-validation-for="SKU" class="text-danger"></span>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="ListPrice" class="p-0"></label>
        <input asp-for="ListPrice" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Gender" class="p-0"></label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select Gender</option>
            @foreach (var gender in Enum.GetValues(typeof(WebApplicationBarosa.Models.Sex)).Cast<WebApplicationBarosa.Models.Sex>())
            {
                <option value="@gender" selected="@(gender == Model.Gender ? "selected" : null)">
                    @gender
                </option>
            }
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="CategoryId" class="p-0"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.CategoryList, "Id", "Name"))">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>


    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Update</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Dog" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to list
            </a>
        </div>
    </div>
    

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}