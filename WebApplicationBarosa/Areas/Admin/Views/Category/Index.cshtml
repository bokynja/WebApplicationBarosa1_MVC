@model List<Category>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class=" col-6">
            <h2 class="text-primary">
                Category list
            </h2>
        </div>
        <div class="col-6 textend">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Id

        </th>
        <th>
            Type Of Breed
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.TypeOfBreed)) {
        <tr>
            <td>@obj.CategoryId</td>
            <td>@obj.TypeOfBreed</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-2">
                                <i class="bi bi-pen"></i> Edit
                    </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId"  class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </td>
           
        </tr>
        }
    </tbody>
</table>
</div>