@model IEnumerable<Dog>

<div class="row pb-3">
    @foreach(var dog in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border 0 p-3 shadow border-top border-5 rounded"></div>
                        <img src="@dog.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@dog.Breed</p>
                            <p class="card-title text-warning text-center">gender: @dog.Gender</p>

                        </div>
                        <a asp-action="Details" 
                        asp-route-dogId="@dog.Id"
                        class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                </div>

            </div>
        </div>
    }
</div>